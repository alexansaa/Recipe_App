<div>
  <div>
    <%= link_to "Add Food", new_food_path %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead> 
    <tbody>
      <% @food.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td><%= link_to "Delete", food, method: :delete %></td>
        </tr>    
      <% end %>
    </tbody> 
  </table>
</div>
